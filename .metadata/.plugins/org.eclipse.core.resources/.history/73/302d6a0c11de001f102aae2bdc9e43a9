package com.easy;

public class Program14 {
    public static void main(String[] args) {
        // Sample array
        int[] array = {5, 2, 8, 3, 6, 7, 10};

        // Call the method to find the sum of even and odd numbers
        findSumOfEvenAndOdd(array);
    }

    public static void findSumOfEvenAndOdd(int[] array) {
        int evenSum = 0;  // Sum of even numbers
        int oddSum = 0;   // Sum of odd numbers

        // Iterate through the array
        for (int num : array) {
            if (num % 2 == 0) {  // If the number is even
                evenSum += num;
            } else {  // If the number is odd
                oddSum += num;
            }
        }

        // Print the results
        System.out.println("Sum of even numbers: " + evenSum);
        System.out.println("Sum of odd numbers: " + oddSum);
    }
}
